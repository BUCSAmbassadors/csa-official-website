    <section class="contact">
        <h3 class="toptext">Have a Question? <span class="redtext">Contact Us</span></h3>
        <h4 class="toptext">{{msg}}</h4>
        <div class="contact-wrapper">
            <div class="contact-about">
                <h3 class="contact-about-text">Contact Info</h3>
                <p class="contact-about-text">Fill up the form and an Ambassador will get back to you immediately!</p>
                <ul class="contact-socials contact-about-text">
                    <li><span class="iconify" data-inline="false" data-icon="mdi:email-outline"></span><a href="mailto:cs@bu.edu">cs@bu.edu</a></li>
                </ul>
                <div class="contact-icons">
                    <a href="https://www.facebook.com/csa.bu.397" class="icon">
                        <span class="iconify" data-inline="false" data-icon="mdi:facebook"></span>
                    </a>
                    <a href="https://twitter.com/BUCSAmbassadors" class="icon">
                        <span class="iconify" data-inline="false" data-icon="mdi:twitter"></span>
                    </a>
                    <a href="https://www.instagram.com/bucsambassadors/" class="icon">
                        <span class="iconify" data-inline="false" data-icon="mdi:instagram"></span>
                    </a>
                </div>
            </div>
            <div class="contact-form">
                <h3>Email Us</h3>
                <form method="POST" action="send">
                    <p>
                        <label>Name</label>
                        <input type="text" name="name" placeholder="First & Last">
                    </p>
                    <p>
                        <label>Email</label>
                        <input type="email" name="email" placeholder="To reach you">
                    </p>
                    <p class="full">
                        <label>Message</label>
                        <textarea name="message" id="message" placeholder="Write your message..." cols="30" rows="10"></textarea>
                    </p>
                    <p class="full">
                        <button type="submit" class="contact-submit">Submit</button>
                    </p>
                </form>
            </div>
        </div>
    </section>

    <footer>
        <div class="social-icons footer-layer">
